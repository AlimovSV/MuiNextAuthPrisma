generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String? @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  givenName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
